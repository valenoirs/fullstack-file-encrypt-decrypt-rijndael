<div class="container-fluid">
  <div class="row mt-5 px-5">
    <div class="col">
      <h3>Poliklinik Penyakit Dalam</h3>

      <br />

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama Pasien</th>
            <th scope="col">Dokter Yang Menangani</th>
            <th scope="col">Rekam Medis</th>
          </tr>
        </thead>
        <tbody>
          <% rm.forEach((rm, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= rm.pasien %></td>
            <td><%= rm.dokter %></td>
            <td>
              <form method="post" action="/file/download">
                <input type="hidden" name="id" value="<%= rm.id %>" />
                <button type="submit" class="btn btn-outline-primary">
                  Download
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
